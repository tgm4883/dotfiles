rm -f ~/.vimrc
rm -f ~/.bashrc
rm -f ~/.bash_profile
rm -Rf ~/.vim
rm -Rf ~/.git-prompt.sh
rm -Rf ~/.puppet-lint.rc
rm -Rf ~/.dircolors

ln -s ~/code/dotfiles/.vimrc ~/.vimrc
ln -s ~/code/dotfiles/.vim ~/.vim
ln -s ~/code/dotfiles/.bashrc ~/.bashrc
ln -s ~/code/dotfiles/.bash_profile ~/.bash_profile
ln -s ~/code/dotfiles/.git-prompt.sh ~/.git-prompt.sh
ln -s ~/code/dotfiles/.puppet-lint.rc ~/.puppet-lint.rc
ln -s ~/code/dotfiles/.dircolors ~/.dircolors
